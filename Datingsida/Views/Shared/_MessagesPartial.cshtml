@model MessageModel
@{ 
    <div>
        <div class="card">
            <div class="card-header">
                @Model.Subject
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p> @Model.MessageText</p>
                    <footer class="blockquote-footer">@Model.DateOfPost</footer>
                </blockquote>
            </div>
        </div>
    </div>
<br/>
 }
