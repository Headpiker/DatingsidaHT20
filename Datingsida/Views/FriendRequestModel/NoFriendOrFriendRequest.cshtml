
@{
    ViewData["Title"] = "NoFriendOrFriendRequestView";
    var noFriends = (bool)ViewData["noFriends"];
    var noFriendRequests = (bool)ViewData["noFriendRequests"];
}
@if (noFriends)
{
    <h1>Du har inga vänner, här kan du söka efter några:</h1>
    <a class="nav-link text-dark" asp-area="" asp-controller="Profile" asp-action="Search">Sök</a>
}
@if (noFriendRequests)
{
    <h1>Du har inga nya vänförfrågningar!</h1>
}